{
	"compilerOptions": {
		"module": "node16",
		"moduleResolution": "node16",
		"moduleDetection": "force",
		"target": "ES2020",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": false,
    "moduleResolution": "node",
		"outDir": "dist",
		"esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "skipLibCheck": true
	},
	"include": ["src"]
}
