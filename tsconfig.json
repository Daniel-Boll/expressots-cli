{
	"compilerOptions": {
	"moduleDetection": "force",
	"module": "commonjs",
	"declaration": true,
	"esModuleInterop": true,
    "moduleResolution": "node",
	"resolveJsonModule": true,
	"target": "ES2017",
	"lib": ["ES2017"],
	"outDir": "bin",
    "sourceMap": false,
    "strictNullChecks": false,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"types": ["node"]
	},
	"include": ["src"]
}
